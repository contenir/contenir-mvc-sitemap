{
    "name": "contenir/contenir-mvc-sitemap",
    "description": "Contenir MVC Sitemap",
    "license": "BSD-3-Clause",
    "keywords": [
        "contenir",
        "laminas",
        "mvc"
    ],
    "homepage": "https://contenir.com.au",
    "support": {
        "docs": "https://docs.contenir.com.au/contenir-mvc-sitemap/",
        "issues": "https://contenir.com.au/issues",
        "source": "https://github.com/contenir/contenir-mvc-sitemap"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laminas": {
            "component": "Contenir\\Mvc\\Sitemap\\"
        }
    },
    "require": {
        "php": "^7.3 || ~8.0.0",
        "laminas/laminas-mvc": "^3.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "Contenir\\Mvc\\Sitemap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Contenir\\Mvc\\Sitemap\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
